@model List<AnkaraPortfolio.Models.TblMessage>

@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Action("ProfileGet", "Message")
<h2>Gelen Kutusu</h2>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>

                    <td>@item.MessageID</td>
                    <td>@item.SenderMessage</td>
                    <td>@item.Subject</td>
                    <td>@item.MessageDate</td>
                    <td><a href="~/Message/MessageDetails/@item.MessageID" class="btn btn-dark">Mesajı Aç</a></td>
                </tr>
            }

</table>
